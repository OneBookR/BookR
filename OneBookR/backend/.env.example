# BookR Environment Variables - EXAMPLE FILE
# Copy this to .env and fill in your actual values

NODE_ENV=development
PORT=3000

# ✅ GOOGLE OAUTH (Get from Google Cloud Console)
CLIENT_ID=your_google_client_id_here
CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=/auth/google/callback

# ✅ MICROSOFT OAUTH (Get from Azure Portal)  
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_CALLBACK_URL=/auth/microsoft/callback

# ✅ FRONTEND URL
FRONTEND_URL=http://localhost:5173

# ✅ SESSION SECRET (Generate a strong random string)
SESSION_SECRET=generate_a_strong_random_string_here

# ✅ EMAIL SERVICE (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM=BookR <noreply@yourdomain.com>

# ✅ FIREBASE (Optional - for analytics)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ✅ PRODUCTION URLS
# For Railway deployment - update these
FRONTEND_URL=https://www.onebookr.se
GOOGLE_CALLBACK_URL=https://www.onebookr.se/auth/google/callback
MICROSOFT_CALLBACK_URL=https://www.onebookr.se/auth/microsoft/callback